<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gallery_image1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/head_portrait"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="Hi,车团长"/>
        <ImageView
            android:id="@+id/gallery_image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="120dp"
            android:src="@drawable/welcome_btn_bg"
            />
    </LinearLayout>
    <ImageView
        android:src="@drawable/main_bg"
        android:layout_width="300dp"
        android:layout_height="370dp"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        />
    <com.example.han.demo1.car.ui.MyFancyCoverFlow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/myfancyCoverFlow"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="70dp"/>

    <ImageView
        android:id="@+id/gallery_image3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/font_change"
        android:layout_marginBottom="90dp"
        />

</RelativeLayout>